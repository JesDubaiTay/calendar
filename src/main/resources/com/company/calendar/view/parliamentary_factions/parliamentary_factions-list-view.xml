<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<view xmlns="http://jmix.io/schema/flowui/view"
      xmlns:c="http://jmix.io/schema/flowui/jpql-condition"
      title="msg://parliamentary_FactionsListView.title"
      focusComponent="parliamentary_FactionsesDataGrid">
    <data>
        <collection id="parliamentary_FactionsesDc"
                    class="com.company.calendar.entity.Parliamentary_Factions">
            <fetchPlan extends="_base"/>
            <loader id="parliamentary_FactionsesDl" readOnly="true">
                <query>
                    <![CDATA[select e from cs_Parliamentary_Factions e]]>
                </query>
            </loader>
        </collection>
    </data>
    <facets>
        <dataLoadCoordinator auto="true"/>
        <urlQueryParameters>
            <genericFilter component="genericFilter"/>
            <pagination component="pagination"/>
        </urlQueryParameters>
    </facets>
    <actions>
        <action id="selectAction" type="lookup_select"/>
        <action id="discardAction" type="lookup_discard"/>
    </actions>
    <layout>
        <genericFilter id="genericFilter"
                       dataLoader="parliamentary_FactionsesDl">
            <properties include=".*"/>
        </genericFilter>
        <hbox id="buttonsPanel" classNames="buttons-panel">
            <button id="createButton" action="parliamentary_FactionsesDataGrid.create"/>
            <button id="editButton" action="parliamentary_FactionsesDataGrid.edit"/>
            <button id="removeButton" action="parliamentary_FactionsesDataGrid.remove"/>
            <simplePagination id="pagination" dataLoader="parliamentary_FactionsesDl"/>
        </hbox>
        <dataGrid id="parliamentary_FactionsesDataGrid"
                  width="100%"
                  minHeight="20em"
                  dataContainer="parliamentary_FactionsesDc"
                  columnReorderingAllowed="true">
            <actions>
                <action id="create" type="list_create"/>
                <action id="edit" type="list_edit"/>
                <action id="remove" type="list_remove"/>
            </actions>
            <columns resizable="true">
                <column property="name"/>
                <column property="factionLeader"/>
            </columns>
        </dataGrid>
        <hbox id="lookupActions" visible="false">
            <button id="selectButton" action="selectAction"/>
            <button id="discardButton" action="discardAction"/>
        </hbox>
    </layout>
</view>
